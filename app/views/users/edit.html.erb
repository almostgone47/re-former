<%= form_for @user do |f| %>
	<%= f.label :username, "User Name" %>
	<%= f.text_field :username, :value => "bob" %>
	<%= f.label :email, "Email Address" %>
	<%= f.text_field :email, placeholder: "i.e. bob@gmail.com" %>
	<%= f.label :password %>
	<%= f.password_field :password, placeholder: "Must be 6 characters" %>
	<%= f.submit %>
<% end %>